APP_NAME="Knowledge Hub for Teams"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8080

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# Set to true to clear public/hot on boot even in local (e.g. to avoid stale Vite dev file).
# CLEAR_VITE_HOT_ON_BOOT=false

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=pgsql
DB_HOST=db
DB_PORT=5432
DB_DATABASE=knowledge_hub
DB_USERNAME=knowledge_hub
DB_PASSWORD=change_me

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=reverb
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

REVERB_APP_ID=knowledge-hub
REVERB_APP_KEY=local-key
REVERB_APP_SECRET=local-secret
# For Docker: app container reaches Reverb by service name (required for broadcasting)
REVERB_HOST=reverb
REVERB_PORT=8080
REVERB_SCHEME=http
REVERB_SERVER_HOST=0.0.0.0
REVERB_SERVER_PORT=8080

# Browser connects to Reverb on the HOST; Docker exposes Reverb as 8081 (see docker-compose ports).
VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST=localhost
VITE_REVERB_PORT=8081
VITE_REVERB_SCHEME="${REVERB_SCHEME}"

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

ATTACHMENTS_DISK=public
ATTACHMENTS_MAX_SIZE_KB=5120

# AI (Phase H): provider-agnostic; keys only for selected provider
# Use AI_PROVIDER=mock for local testing without any API key (no network, no secrets)
# AI_PROVIDER=gemini
# AI_ENABLED=true
# GEMINI_API_KEY=
# AI_AUTO_ANSWER=false
# AI_MODEL=
# AI_TIMEOUT_SECONDS=30
# AI_MAX_OUTPUT_TOKENS=700
# AI_TEMPERATURE=0.3
# # RAG embeddings (used when AI_PROVIDER is mock or openai)
# AI_EMBEDDING_MODEL=
# AI_EMBEDDING_DIMENSION=1536

AI_PROVIDER=mock
AI_ENABLED=true
AI_AUTO_ANSWER=false
AI_MODEL=
AI_TIMEOUT_SECONDS=30
AI_MAX_OUTPUT_TOKENS=700
AI_TEMPERATURE=0.3
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GEMINI_API_KEY=

VITE_APP_NAME="${APP_NAME}"
VITE_DEV_SERVER_URL=http://localhost:5173
